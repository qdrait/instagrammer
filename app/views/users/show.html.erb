<p id="notice"><%= notice %></p>

<div class="card card-container">
    
  <div class="form-category">
    <p><strong>プロフィール画像</strong></p>
    <% if @user.image.present? %>
      <%= image_tag @user.image.url,width:"100px" %>
    <% else %>
      ※プロフィール画像は未登録です。
    <% end %>
  </div>
  
  <div class="form-category">
    <p><strong>メールアドレス</strong></p>
    <%= @user.email %>
  </div>
  
  <div class="form-category">
    <p><strong>名前</strong></p>
    <%= @user.name %>
  </div>
</div>


<div class="card card-container">
<table class="table">
  <thead>
    <tr>
      <th>お気に入り一覧</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.favorite_posts.each do |post| %>
      <tr>
        <td>
          <%= post.user.name %>さん(<%= post.created_at%>)</br>
          「<%= post.content.truncate(22) %>」</br>
        </td>
        <td>
          <% if post.image.present? %>
            <%= image_tag post.image.url,width: "80%" %>
          <% end %>
        </td>
        <td><%= link_to '見る',post_path(post.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>  
</div>