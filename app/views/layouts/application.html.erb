<!DOCTYPE html>
<html>
  <head>
    <title>Instagrammer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
          <span class="sr-only">Bootstrap</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/posts/">
          <span class="glyphicon glyphicon-camera" aria-hidden="true" style="font-size:20px;"></span>
          
          Instagrammer
        </a>
      </div>
      <div id="gnavi" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
        <% if logged_in? %>
          <li><%= link_to "投稿する", new_post_path %></li>
          <li><%= link_to "個人設定", user_path(current_user.id) %></li>
          <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
        <% else %>
          <li><%= link_to "新規登録", new_user_path %></li>
          <li><%= link_to "ログイン", new_session_path %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>

    
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    
  
    
    <%= yield %>
  </body>
</html>
